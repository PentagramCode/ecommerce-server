{
	"compilerOptions": {
		"target": "es2016",
		"module": "commonjs",
		"rootDir": "./src",
		"baseUrl": ".",
		"paths": {
			"@config/*": ["./src/config/*"],
			"@constants/*": ["./src/constants/*"],
			"@controllers/*": ["./src/controllers/*"],
			"@helpers/*": ["./src/helpers/*"],
			"@interfaces/*": ["./src/interfaces/*"],
			"@models/*": ["./src/models/*"],
			"@routes/*": ["./src/routes/*"],
			"@servers/*": ["./src/servers/*"],
			"@services/*": ["./src/services/*"],
			"@validations/*": ["./src/validations/*"]
		},
		"outDir": "./dist",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true,
		"allowJs": true
	},
	"include": ["src", "__test__"],
	"exclude": ["node_modules", "./coverage", "__test__", "jest.config.js"]
}
